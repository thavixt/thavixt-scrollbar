{
	"name": "thavixt-scrollbar",
	"private": true,
	"description": "Monorepo for thavixt-scrollbar",
	"license": "MIT",
	"author": {
		"name": "Péter Komlósi",
		"email": "komlosi.peti@gmail.com",
		"url": "https://github.com/thavixt"
	},
	"keywords": [
		"scrollbar",
		"typescript"
	],
	"bugs": {
		"url": "https://github.com/thavixt/thavixt-scrollbar/issues"
	},
	"homepage": "https://github.com/thavixt/thavixt-scrollbar#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/thavixt/thavixt-scrollbar.git"
	},
	"workspaces": [
		"packages/*"
	],
	"type": "module",
	"scripts": {
		"clean": "rimraf -g \"./packages/*/dist\"",
		"test": "vitest",
		"pretest": "npm i --force && npm run lint && npm run prettify",
		"lint": "eslint",
		"prettify": "prettier . --write",
		"dev": "workspaces-run --parallel -- npm run dev",
		"core:build": "npm run build -w @thavixt/scrollbar-core",
		"core:dev": "npm run dev -w @thavixt/scrollbar-core",
		"react:build": "npm run build -w @thavixt/scrollbar-react",
		"react:dev": "npm run dev -w @thavixt/scrollbar-react",
		"react-demo:dev": "npm run dev -w @thavixt/scrollbar-demo-react",
		"react-demo:deploy": "npm run deploy -w @thavixt/scrollbar-demo-react",
		"npm:deploy": "npx lerna deploy"
	},
	"devDependencies": {
		"@eslint/js": "^9.20.0",
		"@tailwindcss/vite": "^4.0.6",
		"@types/compression": "^1.7.5",
		"@types/express": "^5.0.0",
		"@types/node": "22",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@vitejs/plugin-react": "^4.3.4",
		"eslint": "^9.20.1",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-no-only-tests": "^3.3.0",
		"eslint-plugin-react": "^7.37.4",
		"eslint-plugin-react-hooks": "^5.1.0",
		"eslint-plugin-react-refresh": "^0.4.19",
		"globals": "^15.15.0",
		"html-webpack-plugin": "^5.6.3",
		"prettier": "^3.5.1",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"rimraf": "^6.0.1",
		"source-map-loader": "^5.0.0",
		"typescript": "~5.7.3",
		"typescript-eslint": "^8.24.0",
		"vercel": "^41.1.4",
		"vite": "^6.1.0",
		"workspaces-run": "^1.0.2"
	}
}
